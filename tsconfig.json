{
  "compilerOptions": {
    "target": "es2016",                               
    "module": "commonjs",                         
    "rootDir": "./src",                           
    "moduleResolution": "node",                       
    "outDir": "./build",                             
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,       
    "strict": true,   
    "skipLibCheck": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
